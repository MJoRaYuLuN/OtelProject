                               data-close-others="true">
                                <i class="fa fa-envelope-o"></i>
                                <span class="badge headerBadgeColor2"> 2 </span>
                            </a>
                            <ul class="dropdown-menu animated slideInDown">
                                <li class="external">
                                    <h3><span class="bold">Messages</span></h3>
                                    <span class="notification-label cyan-bgcolor">New 2</span>
                                </li>
                                <li>
                                    <ul class="dropdown-menu-list small-slimscroll-style" data-handle-color="#637283">
                                        <li>
                                            <a href="~/admin/#">
                                                <span class="photo">
                                                    <img src="~/admin/assets/img/user/user2.jpg" class="img-circle" alt="">
                                                </span>
                                                <span class="subject">
                                                    <span class="from"> Sarah Smith </span>
                                                    <span class="time">Just Now </span>
                                                </span>
                                                <span class="message"> Jatin I found you on LinkedIn... </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/admin/#">
                                                <span class="photo">
                                                    <img src="~/admin/assets/img/user/user3.jpg" class="img-circle" alt="">
                                                </span>
                                                <span class="subject">
                                                    <span class="from"> John Deo </span>
                                                    <span class="time">16 mins </span>
                                                </span>
                                                <span class="message">
                                                    Fwd: Important Notice Regarding Your Domain
                                                    Name...
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/admin/#">
                                                <span class="photo">
                                                    <img src="~/admin/assets/img/user/user1.jpg" class="img-circle" alt="">
                                                </span>
                                                <span class="subject">
                                                    <span class="from"> Rajesh </span>
                                                    <span class="time">2 hrs </span>
                                                </span>
                                                <span class="message"> pls take a print of attachments. </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/admin/#">
                                                <span class="photo">
                                                    <img src="~/admin/assets/img/user/user8.jpg" class="img-circle" alt="">
                                                </span>
                                                <span class="subject">
                                                    <span class="from"> Lina Smith </span>
                                                    <span class="time">40 mins </span>
                                                </span>
                                                <span class="message"> Apply for Ortho Surgeon </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/admin/#">
                                                <span class="photo">
                                                    <img src="~/admin/assets/img/user/user5.jpg" class="img-circle" alt="">
                                                </span>
                                                <span class="subject">
                                                    <span class="from"> Jacob Ryan </span>
                                                    <span class="time">46 mins </span>
                                                </span>
                                                <span class="message"> Request for leave application. </span>
                                            </a>
                                        </li>
                                    </ul>
                                    <div class="dropdown-menu-footer">
                                        <a href="~/admin/#"> All Messages </a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- end message dropdown -->
                        <!-- start manage user dropdown -->
                        <li class="dropdown dropdown-user">
                            <a href="~/admin/javascript:;" class="dropdown-toggle" data-bs-toggle="dropdown" data-hover="dropdown"
                               data-close-others="true">
                                <img alt="" class="img-circle " src="~/admin/assets/img/dp.jpg" />
                                <span class="username username-hide-on-mobile"> John </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-default animated jello">
                                <li>
                                    <a href="~/admin/user_profile.html">
                                        <i class="icon-user"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a href="~/admin/#">
                                        <i class="icon-settings"></i> Settings
                                    </a>
                                </li>
                                <li>
                                    <a href="~/admin/#">
                                        <i class="icon-directions"></i> Help
                                    </a>
                                </li>
                                <li class="divider"> </li>
                                <li>
                                    <a href="~/admin/lock_screen.html">
                                        <i class="icon-lock"></i> Lock
                                    </a>
                                </li>
                                <li>
                                    <a href="~/admin/login.html">
                                        <i class="icon-logout"></i> Log Out
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- end manage user dropdown -->
                        <li class="dropdown dropdown-quick-sidebar-toggler">
                            <a id="headerSettingButton" class="mdl-button mdl-js-button mdl-button--icon pull-right"
                               data-upgraded=",MaterialButton">
                                <i class="material-icons">settings</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- end header -->
        <!-- start page container -->
        <div class="page-container">
            <!-- start sidebar menu -->
            <div class="sidebar-container">
                <div class="sidemenu-container navbar-collapse collapse fixed-menu">
                    <div id="remove-scroll">
                        <ul class="sidemenu page-header-fixed p-t-20" data-keep-expanded="false" data-auto-scroll="true"
                            data-slide-speed="200">
                            <li class="sidebar-toggler-wrapper hide">
                                <div class="sidebar-toggler">
                                    <span></span>
                                </div>
                            </li>
                            <li class="sidebar-user-panel">
                                <div class="user-panel">
                                    <div class="row">
                                        <div class="sidebar-userpic">
                                            <img src="~/admin/assets/img/dp.jpg" class="img-responsive" alt="">
                                        </div>
                                    </div>
                                    <div class="profile-usertitle">
                                        <div class="sidebar-userpic-name"> John Deo </div>
                                        <div class="profile-usertitle-job"> Manager </div>
                                    </div>
                                    <div class="sidebar-userpic-btn">
                                        <a class="tooltips" href="~/admin/user_profile.html" data-placement="top"
                                           data-original-title="Profile">
                                            <i class="material-icons">person_outline</i>
                                        </a>
                                        <a class="tooltips" href="~/admin/email_inbox.html" data-placement="top"
                                           data-original-title="Mail">
                                            <i class="material-icons">mail_outline</i>
                                        </a>
                                        <a class="tooltips" href="~/admin/chat.html" data-placement="top"
                                           data-original-title="Chat">
                                            <i class="material-icons">chat</i>
                                        </a>
                                        <a class="tooltips" href="~/admin/login.html" data-placement="top"
                                           data-original-title="Logout">
                                            <i class="material-icons">input</i>
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <li class="menu-heading">
                                <span>-- Yönetim Menü</span>
                            </li>
                            <li class="nav-item start @(ViewBag.Menu == "Anasayfa" ? "active" : "")">
                                <a href="~/admin/#" class="nav-link nav-toggle">
                                    <i class="material-icons">dashboard</i>
                                    <span class="title">Anasayfa</span>
                                </a>
                            </li>
                            <li class="nav-item @(ViewBag.Menu == "Rezervasyon" || ViewBag.Menu == "EskiRezervasyon" ? "active" : "")">
                                <a href="~/admin/#" class="nav-link nav-toggle">
                                    <i class="material-icons">business_center</i>
                                    <span class="title">Rezervasyonlar</span>
                                    <span class="arrow @(ViewBag.Menu == "Rezervasyon" || ViewBag.Menu == "EskiRezervasyon" ? "open" : "")"></span>
                                    @if (ViewBag.Menu == "Rezervasyon" || ViewBag.Menu == "EskiRezervasyon")
                                    {
                                        <span class="selected"></span>
                                    }
                                </a>
                                <ul class="sub-menu">
                                    <li class="nav-item @(ViewBag.Menu == "Rezervasyon" ? "active" : "")">
                                        <a href="~/yonetim/rezervasyon" class="nav-link ">
                                            <span class="title">Rezervasyonlar</span>
                                            @if (ViewBag.Menu == "Rezervasyon")
                                            {
                                                <span class="selected"></span>
                                            }
                                        </a>
                                    </li>
                                    <li class="nav-item @(ViewBag.Menu == "EskiRezervasyon" ? "active" : "")">
                                        <a href="~/yonetim/rezervasyon/eskirezervasyon" class="nav-link ">
                                            <span class="title">Eski Rezervasyonlar</span>
                                            @if (ViewBag.Menu == "EskiRezervasyon")
                                            {
                                                <span class="selected"></span>
                                            }
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item @(ViewBag.Menu == "OdaListe" || ViewBag.Menu == "YeniOda" || ViewBag.Menu == "OdaTip" || ViewBag.Menu == "Pansiyonlar" || ViewBag.Menu == "OdaOzellik" ? "active" : "")">
                                <a href="~/admin/#" class="nav-link nav-toggle">
                                    <i class="material-icons">vpn_key</i>
                                    <span class="title">Odalar</span>
                                    <span class="arrow @(ViewBag.Menu == "OdaListe" || ViewBag.Menu == "YeniOda" || ViewBag.Menu == "OdaTip" || ViewBag.Menu == "Pansiyonlar" || ViewBag.Menu == "OdaOzellik" ? "open" : "")"></span>
                                    @if (ViewBag.Menu == "OdaListe" || ViewBag.Menu == "YeniOda" || ViewBag.Menu == "OdaTip" || ViewBag.Menu == "Pansiyonlar" || ViewBag.Menu == "OdaOzellik")
                                    {
                                        <span class="selected"></span>
                                    }
                                </a>
                                <ul class="sub-menu">
                                    <li class="nav-item @(ViewBag.Menu == "OdaListe" || ViewBag.Menu == "YeniOda"  ? "active" : "")">
                                        <a href="~/yonetim/odalar/" class="nav-link ">
                                            <span class="title">Odalar</span>
                                        </a>
                                    </li>
                                    <li class="nav-item @(ViewBag.Menu == "OdaTip" ? "active" : "")">
                                        <a href="~/yonetim/odalar/odatip" class="nav-link ">
                                            <span class="title">Oda Tipleri</span>
                                        </a>
                                    </li>
                                    <li class="nav-item @(ViewBag.Menu == "Pansiyonlar" ? "active" : "")">
                                        <a href="~/yonetim/odalar/pansiyonlar" class="nav-link ">
                                            <span class="title">Pansiyonlar</span>
                                        </a>
                                    </li>
                                    <li class="nav-item @(ViewBag.Menu == "OdaOzellik" ? "active" : "")">
                                        <a href="~/yonetim/odalar/odaozellik" class="nav-link ">
                                            <span class="title">Oda Özellikleri</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item @(ViewBag.Menu == "MusteriListe" || ViewBag.Menu == "YeniMusteri" ? "active" : "")">
                                <a href="~/admin/#" class="nav-link nav-toggle">
                                    <i class="material-icons">group</i>
                                    <span class="title">Müşteriler</span>
                                    <span class="arrow @(ViewBag.Menu == "MusteriListe" || ViewBag.Menu == "YeniMusteri" ? "open" : "")"></span>
                                    @if (ViewBag.Menu == "MusteriListe" || ViewBag.Menu == "YeniMusteri")
                                    {
                                        <span class="selected"></span>
                                    }
                                </a>
                                <ul class="sub-menu">
                                    <li class="nav-item @(ViewBag.Menu == "MusteriListe" ? "active" : "")">
                                        <a href="~/yonetim/musteri" class="nav-link ">
                                            <span class="title">Müşteriler</span>
                                        </a>
                                    </li>
                                    <li class="nav-item @(ViewBag.Menu == "YeniMusteri" ? "active" : "")">
                                        <a href="~/yonetim/musteri/yenimusteri" class="nav-link ">
                                            <span class="title">Yeni Müşteri</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


            @RenderBody()


        </div>
        <!-- end page container -->
        <!-- start footer -->
        <div class="page-footer">
            <div class="page-footer-inner">
                2022 &copy; Spice Hotel Template By
                <a href="~/admin/mailto:redstartheme@gmail.com" target="_top" class="makerCss">RedStar Theme</a>
            </div>
            <div class="scroll-to-top">
                <i class="icon-arrow-up"></i>
            </div>
        </div>
        <!-- end footer -->
    </div>




    <!-- start js include path -->
    <script src="~/admin/assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin/assets/plugins/popper/popper.min.js"></script>
    <script src="~/admin/assets/plugins/jquery-blockui/jquery.blockui.min.js"></script>
    <script src="~/admin/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- bootstrap -->
    <script src="~/admin/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- Common js-->
    <script src="~/admin/assets/js/app.js"></script>
    <script src="~/admin/assets/js/layout.js"></script>
    <script src="~/admin/assets/js/theme-color.js"></script>


    <script src="~/admin/assets/plugins/sweet-alert/sweetalert2.all.min.js"></script>
    @if (TempData["success"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Başarılı',
                confirmButtonText:'Tamam',
                text: '@Html.Raw(TempData["success"])'
            })
        </script>
    }
    @if (TempData["error"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Hata',
                confirmButtonText:'Tamam',
                text: '@Html.Raw(TempData["error"])'
            })
        </script>
    }
    @if (TempData["warning"] != null)
    {
        <script>
            Swal.fire({
                icon: 'warning',
                title: 'Dikkat',
                confirmButtonText:'Tamam',
                text: '@Html.Raw(TempData["warning"])'
            })
        </script>
    }
    @if (TempData["info"] != null)
    {
        <script>
            Swal.fire({
                icon: 'info',
                title: 'Bilgi',
                confirmButtonText:'Tamam',
                text:'@Html.Raw(TempData["info"])'
            })
        </script>
    }





    @RenderSection("Scripts", required: false)


    <!-- material -->
    <script src="~/admin/assets/plugins/material/material.min.js"></script>
    <!-- animation -->
    <script src="~/admin/assets/js/pages/ui/animations.js"></script>


</body>
</html>
