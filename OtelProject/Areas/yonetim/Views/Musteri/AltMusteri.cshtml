@model List<OtelProject.Data.Models.AltMusteri>
@{
    ViewBag.Menu = "MusteriListe";
    ViewData["Title"] = "AltMusteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Alt Müşteriler</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index-2.html">Anasayfa</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">Müşteriler</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Alt Müşteri Listesi</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-box">
                    <div class="card-head">
                        <header>Alt Müşteri Listesi</header>
                        <div class="tools">
                            <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                            <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                        </div>
                    </div>
                    <div class="card-body ">
                        <div class="row p-b-20">
                            <div class="col-md-6 col-sm-6 col-6">
                                <div class="btn-group">
                                    <a href="~/yonetim/Musteri/YeniAltMusteri?id=0&ustMusteri=@ViewBag.MusteriId" id="addRow" class="btn btn-info">
                                        Yeni Ekle <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="table-scrollable">
                            <table class="table table-hover table-checkable order-column full-width" id="example4">
                                <thead>
                                    <tr>
                                        <th class="center"> Adı Soyadı </th>
                                        <th class="center"> Tc Kimlik No </th>
                                        <th class="center"> Doğum Tarihi </th>
                                        <th class="center"> Uyruk </th>
                                        <th class="center"> Telefon </th>
                                        <th class="center"> İşlem </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td class="center">@item.AdiSoyadi</td>
                                            <td class="center">@item.TCNo</td>
                                            <td class="center">@item.DogumTarihi.ToString("dd.MM.yyyy")</td>
                                            <td class="center">@item.Uyruk</td>
                                            <td class="center">
                                                <a href="~/yonetim/Musteri/YeniAltMusteri?id=@item.Idno&ustMusteri=@item.MusteriId" class="btn btn-tbl-edit btn-xs" title="Düzenle">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a href="~/yonetim/Musteri/AltMusteriSil/@item.Idno" class="btn btn-tbl-delete btn-xs" title="Sil">
                                                    <i class="fa fa-trash-o "></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Head {
    <link href="~/admin/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/admin/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/assets/js/pages/table/table_data.js"></script>
}

