@model OtelProject.ViewModels.OdaResimViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Menu = "OdaListe";
    ViewData["Title"] = "ResimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Resim EKle</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index-2.html">Anasayfa</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">Odalar</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Resim Ekle</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-head">
                        <header>Add Room Details</header>
                        <button id="panel-button"
                                class="mdl-button mdl-js-button mdl-button--icon pull-right"
                                data-upgraded=",MaterialButton">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                            data-mdl-for="panel-button">
                            <li class="mdl-menu__item">
                                <i class="material-icons">assistant_photo</i>Action
                            </li>
                            <li class="mdl-menu__item">
                                <i class="material-icons">print</i>Another action
                            </li>
                            <li class="mdl-menu__item">
                                <i class="material-icons">favorite</i>Something else
                                here
                            </li>
                        </ul>
                    </div>
                    <form  action="~/yonetim/odalar/resimekle" method="post" enctype="multipart/form-data"> @*id="id_dropzone" class="dropzone"*@
                        <div class="card-body row">
                            <div class="col-lg-12 p-t-20">
                                <label class="control-label col-md-3">Resim Ekle</label>
                                <input type="file" asp-for="Resim" tabindex="1">  @*id="dropify-event"*@
                            </div>
                            <div class="col-lg-12 p-t-20 text-center">
                                <input type="hidden" asp-for="OdaId" />
                                <input type="hidden" name="odaid" value="@ViewBag.OdaId" />
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">
                                    Kaydet
                                </button>
                                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">
                                    İptal
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Head{
    <link href="~/admin/assets/plugins/dropify/css/dropify.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/admin/assets/plugins/dropify/js/dropify.js"></script>
    <script src="~/admin/assets/js/dropify.js"></script>
}