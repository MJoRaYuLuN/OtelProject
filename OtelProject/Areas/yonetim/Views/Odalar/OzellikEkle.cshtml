@model List<OtelProject.ViewModels.OzellikSecimViewModel>
@{
    ViewBag.Menu = "OdaListe";
    ViewData["Title"] = "OzellikEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Oda Özellikleri</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index-2.html">Panel</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">Odalar</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Oda Özellikleri</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-head">
                        <header>Oda Özellikleri</header>
                        <button id="panel-button" class="mdl-button mdl-js-button mdl-button--icon pull-right" data-upgraded=",MaterialButton">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                            data-mdl-for="panel-button">
                            <li class="mdl-menu__item">
                                <i class="material-icons">assistant_photo</i>Action
                            </li>
                            <li class="mdl-menu__item">
                                <i class="material-icons">print</i>Another action
                            </li>
                            <li class="mdl-menu__item">
                                <i class="material-icons">favorite</i>Something else
                                here
                            </li>
                        </ul>
                    </div>
                    <form action="~/yonetim/odalar/ozellikekle" method="post">
                        <div class="card-body row">
                            @foreach (var item in Model)
                            {
                                string secim = "";
                                if(item.Secim==true) 
                                    secim = "checked=\"checked\"";


                                <div class="col-lg-4 p-t-20">
                                    <div class="checkbox checkbox-icon-black">
                                        <input id="chk_@item.OzellikId" type="checkbox" name="ozellik" value="@item.OzellikId" @secim>
                                        <label for="chk_@item.OzellikId">@item.Baslik</label>
                                    </div>
                                </div>
                            }
                            <div class="col-lg-12 p-t-20 text-center">
                                <input name="odaid" value="@ViewBag.Id" type="hidden" />
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">
                                    Kaydet
                                </button>
                                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">
                                    İptal
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



